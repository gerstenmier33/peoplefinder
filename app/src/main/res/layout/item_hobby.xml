<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/hobby_tag" android:id="@+id/linearlayoutholder" android:onClick="onClick">

    <TextView
        android:id="@+id/item_hobby_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/viewholder_height"
        android:layout_marginStart="@dimen/viewholder_margin"
        android:layout_marginEnd="@dimen/viewholder_margin"
        android:text="football"
        android:textColor="@android:color/white"
        android:gravity="center_vertical|center_horizontal"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_hobby_delete_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_clear_black_24dp" />


</LinearLayout>